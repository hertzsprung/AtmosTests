type            surfaces;
libs            ("libsampling.so");

writeControl    writeTime;

surfaceFormat raw;
interpolationScheme cell;

fields ($FIELD);

surfaces
(
    constantPlane
    {
        type         cuttingPlane;
        planeType    pointAndNormal;
        pointAndNormalDict
        {
            basePoint       (0 0 10e3);
            normalVector    (0 1 0);
        }
        interpolate     false;
        triangulate     false;
    }
);
