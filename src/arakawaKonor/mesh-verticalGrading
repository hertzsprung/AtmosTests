FoamFile {
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

convertToMeters 1000; // effective units are km

vertices (
    (-400 0 0)  // 0
    (0 0 0)     // 1
    (0 1 0)     // 2
    (-400 1 0)  // 3
    (-400 0 30) // 4
    (0 0 30)    // 5
    (0 1 30)    // 6
    (-400 1 30) // 7
    (400 0 0)   // 8
    (400 1 0)   // 9
    (400 0 30)  // 10
    (400 1 30)  // 11
);

blocks (
	hex (0 1 2 3 4 5 6 7)   (60 1 30) edgeGrading (0.9 0.9 1.111111 1.111111 1 1 1 1 1 1 1 1)
	hex (1 8 9 2 5 10 11 6) (60 1 30) edgeGrading (1.111111 1.111111 0.9 0.9 1 1 1 1 1 1 1 1)
);

boundary (
	left {
		type cyclic;
        	neighbourPatch right;
		faces (
			(0 3 7 4)
		);
	}

	right {
		type cyclic;
        	neighbourPatch left;
		faces (
			(8 9 11 10)
		);
	}

	ground {
		type wall;
		faces (
			(0 1 2 3)
            		(1 8 9 2)
		);	
	}

	top {
		type wall;
		faces (
			(4 5 6 7)
            		(5 10 11 6)
		);
	}

	frontAndBack {
		type empty;
		faces (
			(0 1 5 4)
			(3 2 6 7)
			(1 8 10 5)
			(2 9 11 6)
		);
	}
);
