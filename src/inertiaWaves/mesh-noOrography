FoamFile {
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

convertToMeters 1000; // effective units are km

vertices (
    (-200 0 0)  // 0
    (200  0 0)  // 1
    (200  1 0)  // 2
    (-200 1 0)  // 3
    (-200 0 10) // 4
    (200  0 10) // 5
    (200  1 10) // 6
    (-200 1 10) // 7
);

blocks (
	hex (0 1 2 3 4 5 6 7)
	    (400 1 10)
	    simpleGrading (1 1 1)
);

boundary (
	inlet {
		type inlet;
		faces (
			(0 3 7 4)
		);
	}

	outlet {
		type outlet;
		faces (
			(1 2 6 5)
		);
	}

	ground {
		type wall;
		faces (
			(0 1 2 3)
		);	
	}

	top {
		type wall;
		faces (
			(4 5 6 7)
		);
	}

	frontAndBack {
		type empty;
		faces (
			(0 1 5 4)
			(3 2 6 7)
		);
	}
);
