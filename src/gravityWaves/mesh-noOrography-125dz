FoamFile {
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

convertToMeters 1000; // effective units are km

// effectively 2D in x-z plane, 300x25km
vertices (
    (-50 0 0)  // 0
    (50  0 0)  // 1
    (50  1 0)  // 2
    (-50 1 0)  // 3
    (-50 0 10) // 4
    (50  0 10) // 5
    (50  1 10) // 6
    (-50 1 10) // 7
);

blocks (
	hex (0 1 2 3 4 5 6 7)
	    (480 1 80)
	    simpleGrading (1 1 1)
);

boundary (
	inlet {
		type inlet;
		faces (
			(0 3 7 4)
		);
	}

	outlet {
		type outlet;
		faces (
			(1 2 6 5)
		);
	}

	ground {
		type wall;
		faces (
			(0 1 2 3)
		);	
	}

	top {
		type wall;
		faces (
			(4 5 6 7)
		);
	}

	frontAndBack {
		type empty;
		faces (
			(0 1 5 4)
			(3 2 6 7)
		);
	}
);
