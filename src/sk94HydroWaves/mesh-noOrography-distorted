FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          blockMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1000;

a 3000;
ma -3000;
//am -100;
//ap 100;
//hz 5;
pz 5.1;
mz 4.9;
top 10;

vertices
(
    ($ma 1 0)
    (0   1 0)
    ($a  1 0)
    ($ma 1 $mz)
    (0   1 $pz)
    ($a  1 $mz)
    ($ma 1 $top)
    (0   1 $top)
    ($a  1 $top)
    ($ma 0 0)
    (0   0 0)
    ($a  0 0)
    ($ma 0 $mz)
    (0   0 $pz)
    ($a  0 $mz)
    ($ma 0 $top)
    (0   0 $top)
    ($a  0 $top)
);

blocks
(
	hex (0 1 4 3 9 10 13 12)  (75 10 1) simpleGrading (1 1 1) // edgeGrading (1 1 1 1 2 0.5 0.5 2 1 1 1 1)
	hex (1 2 5 4 10 11 14 13) (75 10 1) simpleGrading (1 1 1) // edgeGrading (1 1 1 1 0.5 2 2 0.5 1 1 1 1)
	hex (3 4 7 6 12 13 16 15) (75 10 1) simpleGrading (1 1 1) // edgeGrading (1 1 1 1 2 0.5 0.5 2 1 1 1 1)
	hex (4 5 8 7 13 14 17 16) (75 10 1) simpleGrading (1 1 1) // edgeGrading (1 1 1 1 0.5 2 2 0.5 1 1 1 1)
);

edges
(
);

boundary
(
    ground
    {
        type            wall;
        faces           ((0 1 10 9) (1 2 11 10));
    }
    top
    {
        type            wall;
        faces           ((15 16 7 6) (16 17 8 7));
    }
    inlet
    {
        type            cyclic;
        neighbourPatch  outlet;
        faces           ((9 12 3 0) (12 15 6 3));
    }
    outlet
    {
        type            cyclic;
        neighbourPatch  inlet;
        faces           ((2 5 14 11) (5 8 17 14));
    }
    front
    {
        type            cyclic;
        neighbourPatch  back;
        faces           ((9 10 13 12) (10 11 14 13)
                         (12 13 16 15) (13 14 17 16));
    }
    back
    {
        type            cyclic;
        neighbourPatch  front;
        faces           ((0 3 4 1) (1 4 5 2) (3 6 7 4) (4 7 8 5));
    }
);

mergePatchPairs
(
);

