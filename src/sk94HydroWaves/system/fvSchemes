FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

offCentre 1;
SIgravityWaves false;

gradSchemes
{
    default         none;
    grad(theta)     Gauss midPoint;
    grad(u)         Gauss midPoint;
    grad(U)         Gauss midPoint;
}

divSchemes
{
    default             none;
    div(U,theta)      Gauss linearUpwind grad(theta);
    div(U,u)          Gauss linearUpwind grad(u);
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default                midPoint; 
    interpolate(theta)     midPoint;
    interpolate(grad(theta)) midPoint;
    interpolate(rho)       midPoint;
    interpolate(convection(phi,U)) midPoint;
    interpolate(U)         midPoint;
    interpolate(convection(U,u)) midPoint;
    interpolate(u)         midPoint;
    H                      midPoint;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
    snGrad(theta)   uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


