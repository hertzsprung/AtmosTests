FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "constant";
    object      Exner_init;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    ground
    {
        type            fixedValue; //fixedFluxBuoyantExner;
        gradient        uniform 0;
        value           uniform 1;
    }
    top
    {
        type            fixedFluxBuoyantExner;
        value           uniform 1;
        gradient        uniform 0;
    }
    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
    front
    {
        type            cyclic;
    }
    back
    {
        type            cyclic;
    }
}


