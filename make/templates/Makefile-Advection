# $1 -- case directory
# $2 -- mesh case
define CubicUpwindTerrainFollowingAdvection

$(eval $(call Advection,$1,$2,src/advection/terrainFollowingVelocityField,src/advection/system/cubicUpwindCPCFit src/advection/system/commonFvSchemes,20))

