deformationalAdvectionEndTime := 1.0368e+06

# $1 -- case directory
# $2 -- mesh case
# $3 -- advectionDict
# $4 -- tracerFieldDict
# $5 -- fvSchemes
# $6 -- timestep
define DeformationalAdvection

$(eval $(call InitialTracer,$1,$4,src/deformationSphere/T_init))
$(eval $(call AdvectTracerInVaryingSphericalWind,$1,$2,$3,$(deformationalAdvectionEndTime),$6,6400,$5))

$(eval $(call FieldDiff,$1,$(deformationalAdvectionEndTime),T,$1/0/T))
$(eval $(call Errors,$1,$(deformationalAdvectionEndTime),T))
$(eval $(call MeshDiagnostics,$1))

endef
