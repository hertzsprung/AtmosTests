# $1 -- case
# $2 -- mesh
# $3 -- environmentalProperties
define Resting

$(eval $(call MeshDiagnostics,$1))
$(eval $(call Physical,$1,$2,src/resting/0/Uf,$1-theta/0/theta,$1-exner/0/Exner,$3,src/physical/$(thermophysicalProperties),src/resting/$(fvSchemes),src/resting/$(fvSolution),21600,100,3600,$(exnerFoamH)))
$(eval $(call InitialTheta,$1-theta,$2,src/resting/$(thetaInit),$3,src/physical/$(thermophysicalProperties),src/resting/$(fvSchemes),src/resting/$(fvSolution)))
$(eval $(call InitialExnerInterpTheta,$1-exner,$2,src/resting/$(exnerInit),$1-theta/0/theta,$3,src/physical/$(thermophysicalProperties),src/resting/$(fvSchemes),src/resting/$(fvSolution)))

endef
