define RestingLorenz

$(eval $(call Resting,$1,$2,100,$(exnerFoamH),InitialExnerInterpTheta))

endef

define RestingCharneyPhillips

$(eval $(call Resting,$1,$2,50,$(exnerFoamCP),InitialExnerNoInterpTheta))

endef

# $1 -- case
# $2 -- mesh
# $3 -- timestep
# $4 -- solver
# $5 -- InitialExner template
define Resting

$(eval $(call Physical,$1,$2,src/resting/0/Uf,$1-theta/0/theta,$1-exner/0/Exner,src/resting/$(environmentalProperties),src/physical/$(thermophysicalProperties),src/resting/$(fvSchemes),src/resting/$(fvSolution),21600,$3,3600,$4))
$(eval $(call InitialTheta,$1-theta,$2,src/resting/$(thetaInit),src/resting/$(environmentalProperties),src/physical/$(thermophysicalProperties),src/resting/$(fvSchemes),src/resting/$(fvSolution)))
$(eval $(call $5,$1-exner,$2,src/resting/$(exnerInit),$1-theta/0/theta,src/resting/$(environmentalProperties),src/physical/$(thermophysicalProperties),src/resting/$(fvSchemes),src/resting/$(fvSolution)))

endef
