# $1 -- case
# $2 -- time
# $3 -- field name
# $4 -- sampleDict
define SamplePlane

$1/$2/$3.$(notdir $4): \
  $1/$2/$3 \
  $1/$(notdir $4)-$3 \
  $(addprefix $1/,$(meshFiles) $(systemFiles))
	$(sample) -case $1 -time $2 -dict $(notdir $4)-$3
	cp $1/postProcessing/surfaces/$2/$3_constantPlane.raw $1/$2/$3.$(notdir $4)

$(eval $(call SampleDict,$1,$3,$4))

endef

# $1 -- case
# $2 -- field name
# $3 -- sampleDict template
define SampleDict

$1/$(notdir $3)-$2: $3
	FIELD=$2 $(envsubst) < $$< > $$@

endef
